---
type Technology = {
    name?: string;
    icon?: string;
};

interface Props {
    url: string;
    image: string;
    title: string;
    body: string;
    technologies?: Technology[];
}

const { url, image, title, body, technologies } = Astro.props;
---

<li class="card">
    <a class="card__link" href={url}>
        <div class="center">
            <img
                class="card__img"
                width="226"
                height="127"
                src={image}
                alt="ProjectImage"
            />
        </div>
        <h3 class="card__title">
            {title}
        </h3>
        <p class="card__txt">
            {body}
        </p>
        <div class="technologies">
            {technologies.map((tech) => <div class="tech"><img width="25" height="25" src={tech.icon}/><div class="tech__name">{tech.name}</div></div>)}
        </div>
        <!-- <div>
            {technologies.map(({name}) => console.log(name))}
        </div> -->
    </a>
</li>
